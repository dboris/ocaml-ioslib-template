(executable
 (name lib)
 (enabled_if
  (or
   (= %{context_name} "device.ios")
   (= %{context_name} "simulator")
   (= %{context_name} "simulator.ios")))
 (libraries
  threads
  unix
  sqlite3
  ; base
  sexplib)
 (flags
  (:standard
  ;  -verbose
   -noautolink
   -cclib -lsqlite3_stubs
